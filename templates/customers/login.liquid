<div class="container py-5 my-5">
    <div style="
        width: 100%;
        max-width: 330px;
        margin: auto;
    ">
        <h2>Login</h2>
        {% form 'customer_login' %}
    
            {% include 'form-error', form: form %}
        
            <label for="customer_email">Email Address</label>
            <input type="email" name="customer[email]" class="form-control my-2" />
        
            <label for="customer_password">Password</label>
            <input type="password" name="customer[password]" class="form-control my-2" />
        
            <input class="btn btn-primary w-100" type="submit" value="Sign In" />
            <a id="forgotPassword" href="forgot-password.liquid">Forgot password?</a>
        {% endform %}
    </div>
    <div id="forgot_password_form" class="forgot-password-form d-none">
        {% form 'recover_customer_password' %}
            {% include 'form-error', form: form %}
            <div class="col-12">
                <label class="form-label" for="resetPassword">Email Address</label>
                <input type="email" name="email" id="resetPassword" class="form-control my-2">
            </div>
            <input class="btn btn-secondary w-100" type="submit" value="Reset Password">
        {% endform %}
    </div>
</div>
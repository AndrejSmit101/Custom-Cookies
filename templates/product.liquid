  <div class="row">
    <div class="col-md-12">
      <div class="d-flex justify-content-center">
        <h4 class="px-5"><a style="text-decoration: none; color: black;" href="#featured">Featured Products</a></h4>
        <h4 class="px-5"><a style="text-decoration: none; color: black;" href="#birthday">Also for Birthday</a></h4>
        <h4 class="px-5"><a style="text-decoration: none; color: black;" href="#similar-products">Similar Products</a></h4>
      </div>
      <div id="featured" class="d-none">
        {% include 'featured-collection' %}

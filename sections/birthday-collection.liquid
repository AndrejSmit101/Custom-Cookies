<section class="container py-4">
    <h2 class="text-center my-3">{{ section.settings.title }}</h2>
    <div class="row">
      {% paginate collections[section.settings.birthday_collection].products by 4 %}
        {% for product in collections[section.settings.birthday_collection].products %}
        {% assign image = product.featured_media.preview_image %}
          <div class="col">
            {% include 'product-card' %}
          </div>
        {% endfor %}
        {% render 'paginate', paginate: paginate %}
      {% endpaginate %}
    </div>
  </section>
  
  {% schema %}
  {
    "name": "Birthday Collection",
    "class": "birthday-collection-section",
    "settings": [
    {
      "type": "collection",
      "id": "birthday_collection",
      "label": "Collection"
    },
    {
      "type": "text",
      "id": "title",
      "default": "Birthday Collection",
      "label": "Title"
    }
    ],
    "presets": [
    {
      "category": "Collection",
      "name": "Birthday Collection"
    }
    ]
  }
  {% endschema %}
  